    <script>
        // Simular compra de un solo producto
        function simulateSinglePurchase() {
            const singleProduct = [{ id: 'ia-que-vende' }];
            redirectToDownloads(singleProduct);
        }

        // Simular compra de carrito completo
        function simulateFullCart() {
            const allProducts = [
                { id: 'ia-que-vende' },
                { id: 'aprende-ia' },
                { id: 'arte-dinero' },
                { id: 'entrena-dinero' }
            ];
            redirectToDownloads(allProducts);
        }

        // Redirigir a p√°gina de descargas
        function redirectToDownloads(items) {
            const params = new URLSearchParams();
            params.set('items', JSON.stringify(items));
            params.set('success', 'true');
            params.set('demo', 'true');
            params.set('timestamp', Date.now());
            
            window.location.href = `descarga.html?${params.toString()}`;
        }

        // Agregar un poco de interactividad
        document.querySelectorAll('.demo-btn').forEach(btn => {
            btn.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-2px)';
            });
            
            btn.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
